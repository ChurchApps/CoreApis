# Environment
ENVIRONMENT=dev

# API Configuration
API_PORT=8084
API_URL=http://localhost:8084

# Database Connection Strings (mysql://user:password@host:port/database)
# Update these with your actual database credentials
MEMBERSHIP_DB_URL=mysql://root:password@localhost:3306/membership
ATTENDANCE_DB_URL=mysql://root:password@localhost:3306/attendance
CONTENT_DB_URL=mysql://root:password@localhost:3306/content
GIVING_DB_URL=mysql://root:password@localhost:3306/giving
MESSAGING_DB_URL=mysql://root:password@localhost:3306/messaging
DOING_DB_URL=mysql://root:password@localhost:3306/doing

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=172800

# AWS Configuration
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Stripe Configuration
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# WebSocket Configuration
WEBSOCKET_PORT=8087
WEBSOCKET_URL=ws://localhost:8087

# Email Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@example.com

# External API Keys
YOUTUBE_API_KEY=
VIMEO_API_KEY=
OPENAI_API_KEY=

# OAuth Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Application URLs
APP_URL=http://localhost:3000
ACCOUNTS_URL=http://localhost:3001

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Logging
LOG_LEVEL=debug
LOG_TO_CLOUDWATCH=false

# Database Pool Configuration
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0
DB_WAIT_FOR_CONNECTIONS=true
DB_CONNECTION_TIMEOUT=60000
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000